{% trans_default_domain 'FOSUserBundle' %}
<div class="box_form clearfix">
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
     <div class="col-md-12 ">
                     <div class="row">
                                <div class="col-md-10 ">
                                    <div class="form-group">
                            {{ form_widget(form.current_password ,{'attr': {'class': '  form-control ',  'placeholder':'Mot de passe actuel'}}) }}
                                    </div>
                                </div>
                                
                           
                                <div class="col-md-12 ">
                                    <div class="form-group">
                            {{ form_widget(form.plainPassword.first ,{'attr': {'class': '  form-control ',  'placeholder':'Nouveau mot de passe'}}) }}
                                    </div>
                                </div>
                                
                           
                                <div class="col-md-12 ">
                                    <div class="form-group">
                            {{ form_widget(form.plainPassword.second ,{'attr': {'class': '  form-control ',  'placeholder':'Confirmer nouveau mot de passe'}}) }}
                                    </div>
                                </div>
                                
                            </div>
                            <br>

    <div>
        <center><input  class="btn_1" type="submit" value="{{ 'change_password.submit'|trans }}" /></center>
    </div>
    <br><br><br>
    </div>
{{ form_end(form) }}
</div>