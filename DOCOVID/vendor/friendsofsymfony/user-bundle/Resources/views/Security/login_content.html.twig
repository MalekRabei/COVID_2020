
{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}



                            
                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                	<div class="box_form clearfix">
							<div class="box_login">
							
							<br/>
							<br/>

							<a href="index.html" title="DOCOVID"><img src="img/logo.png" data-retina="true" alt="" width="250" height="50"></a>
							<br/>
							<br/>	
							<br/>
					
							
							</div>
                            <div class="box_login last">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                            
							   <span class="label-input100" for="username">{{ 'security.login.username'|trans }}</span>
                                <input type="text" id="username" class="form-control" name="_username"  placeholder="Votre adresse mail" value="{{ last_username }}" required="required" autocomplete="username" />
                           
                                <span class="label-input100" for="password">{{ 'security.login.password'|trans }}</span>
							    <input type="password" id="password"  class="form-control" name="_password" placeholder="Votre mot de passe" required="required" autocomplete="current-password" />
                          
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                            <br>
							    <input type="submit" id="_submit" class="btn_1" name="_submit" value="{{'security.login.submit'|trans }}" />
                            </div>
                            </div>
                            </form>
							